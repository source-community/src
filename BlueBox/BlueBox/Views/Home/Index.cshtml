
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BlueBox</title>
    <link href="~/skin/default/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body class="loginbody">
    @using (Ajax.BeginForm("Valilogin", "home", new AjaxOptions()
    {
        OnSuccess = "Success"
    }))
    {
        <div style="width:100%; height:100%; min-width:300px; min-height:260px;"></div>
        <div class="login-wrap">
            <div class="login-logo">LOGO</div>
            <div class="login-form">
                <div class="col">
                    <input type="text" name="txtUserName" class="login-input" placeholder="管理员账号" title="管理员账号" />
                    <label class="icon user" for="txtUserName"></label>
                </div>
                <div class="col">
                    <input type="Password" name="txtPassword" class="login-input" placeholder="管理员密码" title="管理员密码" />
                    <label class="icon pwd" for="txtPassword"></label>
                </div>
                <div class="col">
                    <input type="submit" value="登 录" class="login-btn" />
                </div>
            </div>
            <div class="login-tips"><i></i><p id="msgtip">请输入用户名和密码</p></div>
        </div>

        <div class="copy-right">
            <p>此版本仅供学习参考。如有建议，请留言</p>
        </div>
    }
    <script type="text/javascript">
        function Success(data) {
            if (data.status==0)
                $("#msgtip").val(data.msg);
            else if (data.status==1)//登录成功跳转将来要修改
                window.location="@Url.Action("Index", "Home")";
            else
                window.location="@Url.Action("Index", "Home")";
    }
    </script>
</body>
</html>

